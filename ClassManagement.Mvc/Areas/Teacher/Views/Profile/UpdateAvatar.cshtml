@model ClassManagement.Mvc.Models.User.UpdateImageViewModel

@{
    Layout = "";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="UpdateAvatar" onsubmit="return jQueryPost('#profile',this,'Avatar');">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Image" type="file" class="form-control" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 mt-3">
                <input type="submit" value="Lưu" class="btn btn-danger ip-custom btn-custom" />
            </div>
        </form>
    </div>
</div>
