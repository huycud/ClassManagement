@using ClassManagement.Mvc.Models.Class
@model List<ClassViewModel>

@foreach (var item in Model ?? new List<ClassViewModel> { })
{
    <tr class="text-center subject-custom-td" id="@item.Id">
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.TeacherItem.Fullname</td>
        <td>@item.ClassSize</td>
        <td>@item.Amount</td>
        <td>@item.Type</td>
        <td>@item.StartedAt.ToString("dd/MM/yyyy")</td>
        <td>@item.EndedAt.ToString("dd/MM/yyyy")</td>
        <td style="white-space:nowrap; justify-content:center">
            <div class="row justify-content-center">
                <div class="col-4">
                    <a class="btn btn-danger" onclick="showInPopup('@Url.Action("UpdateClass","Class",new {id=item.Id},Context.Request.Scheme)','Cập nhật')">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-4">
                    <a class="btn btn-success" asp-action="AddStudentsToClass" asp-route-id="@item.Id">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="row justify-content-center" style="margin-top:5px">
                <div class="col-4">
                    <a class="btn btn-primary" asp-action="GetClientsByClassId" asp-route-id="@item.Id">
                        <i class="fas fa-user fa-fw"></i>
                    </a>
                </div>
                <div class="col-4">
                    <a class="btn btn-warning" asp-action="GetHomeworkssByClassId" asp-route-id="@item.Id">
                        <i class="fa fa-book-open"></i>
                    </a>
                </div>
            </div>
        </td>
    </tr>
}
