@using ClassManagement.Mvc.Models.Authentication;
@model LoginViewModel

@{
    Layout = "";
}

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng nhập</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/customs.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-custom">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg custom-mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body">
                                    <form asp-action="Index" asp-controller="Login" asp-route-returnUrl="@returnUrl" method="post">
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="UserName" type="text" placeholder="Nhập tên người dùng....." />
                                            <label class="control-label" asp-for="UserName"></label>
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Password" type="password" placeholder="Nhập mật khẩu....." />
                                            <label class="control-label" asp-for="Password"></label>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="checkbox" onclick="showPasswordOrNot()"> Hiện mật khẩu
                                        </div>
                                        <button class="btn btn-primary ip-custom btn-custom" type="submit">Đăng nhập</button>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a class="small" href="password.html">Quên mật khẩu</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>

